#!/bin/bash
# postinst script for wazo-agentd
#
# see: dh_installdeb(1)

DAEMONNAME='wazo-agentd'
USER='wazo-agentd'
GROUP=$USER
LOG_FILENAME="/var/log/$DAEMONNAME.log"

case "$1" in
    configure)
        previous_version="$2"

        # add user
        if ! getent passwd $USER > /dev/null ; then
            echo "Adding system user $USER" 1>&2
            adduser --quiet --system --group --no-create-home \
                    --home /var/lib/wazo-agentd \
                    $USER
            adduser --quiet $USER www-data
        fi

        # migrate from xivo-agentd
        rm -f /etc/nginx/locations/https-enabled/xivo-agentd
        if [ -f /var/log/xivo-agentd.log ] ; then
            rename 's/xivo-agentd/wazo-agentd/g' /var/log/xivo-agentd.log*
        fi
        if [ -d /etc/xivo-agentd/conf.d ] ; then
            find /etc/xivo-agentd/conf.d/ -mindepth 1 -exec mv {} /etc/wazo-agentd/conf.d/ \;
            rmdir --ignore-fail-on-non-empty -p /etc/xivo-agentd/conf.d
        fi
        if [ -d /var/lib/xivo-agentd ] ; then
            find /var/lib/xivo-agentd/ -mindepth 1 -exec mv {} /var/lib/wazo-agentd/ \;
        fi
        rm -rf /var/run/xivo-agentd
        if getent passwd xivo-agentd > /dev/null; then
            deluser --quiet --system --remove-home xivo-agentd
        fi
        # End of migration from xivo-agentd

        # setup permissions for the log file and home directory
        if [ ! -e "$LOG_FILENAME" ]; then
            touch "$LOG_FILENAME"
        fi
        chown $USER:$GROUP "$LOG_FILENAME" /var/lib/wazo-agentd

        if [[ -z "${previous_version}" ]]; then
            ln -sf  /etc/nginx/locations/https-available/$DAEMONNAME \
                    /etc/nginx/locations/https-enabled/$DAEMONNAME
        fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
